<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
	<module name="TreeWalker">
		<!-- Forbid literal null usage in Java code. Recommend java.util.Optional instead. -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\bnull\b" />
			<property name="message"
				value="Avoid using literal 'null'; prefer java.util.Optional to represent absence." />
			<property name="severity" value="error" />
		</module>
		<!-- Forbid the 'throws' literal; prefer Result<T,E> (Ok/Err) instead of Java exceptions. -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\bthrows\b" />
			<property name="message" value="Avoid using 'throws'; prefer returning Result&lt;T,E&gt; (Ok/Err) instead of throwing exceptions." />
			<property name="severity" value="error" />
		</module>

		<!-- Forbid throwing new exception instances (e.g. `throw new RuntimeException(...)`). -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\bthrow\s+new\b" />
			<property name="message" value="Avoid throwing exceptions; prefer returning Result&lt;T,E&gt; (Ok/Err) to make control flow explicit." />
			<property name="severity" value="error" />
		</module>
	</module>
</module>
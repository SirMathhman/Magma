<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
	<!-- Ban the literal `null` entirely; suggest java.util.Optional instead -->
	<module name="TreeWalker">
		<module name="IllegalToken">
			<!-- Forbid the null literal token -->
			<property name="tokens" value="LITERAL_NULL" />
		</module>

		<!-- Forbid throw/throws usage; prefer Result<T, X> type instead -->
		<module name="IllegalToken">
			<property name="tokens" value="LITERAL_THROW,LITERAL_THROWS" />
		</module>

		<!-- Forbid explicit casts; prefer pattern matching or polymorphism -->
		<module name="IllegalToken">
			<property name="tokens" value="TYPECAST" />
		</module>

		<!-- Ban wildcard generics like List<?> or Map<? extends T> -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="&lt;\s*\?|\?\s+extends|\?\s+super" />
			<property name="message"
				value="Avoid wildcard generics ('?'); prefer explicit type parameters or bounded types." />
		</module>

		<!-- Ban literal uses of 'Object' - prefer proper polymorphism or generics -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\\bObject\\b" />
			<property name="message"
				value="Avoid using raw 'Object'; prefer proper polymorphism or generic types." />
		</module>

		<!-- Disallow use of java.util.regex package (no regex usage allowed) -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\bjava\.util\.regex\b|\bimport\s+java\.util\.regex" />
			<property name="message" value="Usage of java.util.regex is disallowed by project policy." />
		</module>

		<!-- Limit cyclomatic complexity per method to 15 -->
		<module name="CyclomaticComplexity">
			<property name="max" value="15" />
		</module>
	</module>
</module>
<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Excludes all 'module-info.java' files -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value="module\-info\.java$"/>
    </module>

    <module name="TreeWalker">
        <!-- Enforce tabs for indentation instead of spaces -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="^\s* "/>
            <property name="message" value="Indentation should use tabs instead of spaces"/>
            <property name="ignoreComments" value="true"/>
        </module>

        <!-- Checks for imports -->
        <!-- <module name="AvoidStarImport"/> --> <!-- Commented out to permit wildcard imports -->
        <module name="IllegalImport"/>
        <module name="RedundantImport"/>
        <module name="UnusedImports"/>

        <!-- Checks for blocks -->
        <module name="EmptyBlock">
            <property name="option" value="TEXT"/>
            <property name="tokens" value="LITERAL_TRY, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE, LITERAL_SWITCH"/>
        </module>
        <module name="NeedBraces">
            <property name="tokens" value="LITERAL_DO, LITERAL_ELSE, LITERAL_FOR, LITERAL_WHILE"/>
        </module>
        <module name="LeftCurly"/>
        <module name="RightCurly"/>

        <!-- Checks for common coding problems -->
        <module name="EmptyStatement"/>
        <module name="EqualsHashCode"/>
        <module name="IllegalInstantiation"/>
        <module name="SimplifyBooleanExpression"/>
        <module name="SimplifyBooleanReturn"/>

        <!-- Checks for class design -->
        <module name="FinalClass"/>
        <module name="InterfaceIsType"/>
        <module name="VisibilityModifier"/>

        <!-- Miscellaneous other checks -->
        <module name="ArrayTypeStyle"/>
        <module name="TodoComment"/>
        <module name="UpperEll"/>

        <!-- CUSTOM RULES AS PER REQUIREMENTS -->

        <!-- Maximum 10 lines per method -->
        <module name="MethodLength">
            <property name="tokens" value="METHOD_DEF"/>
            <property name="max" value="10"/>
            <property name="countEmpty" value="false"/>
        </module>

        <!-- Maximum 2 parameters per method -->
        <module name="ParameterNumber">
            <property name="max" value="2"/>
            <property name="tokens" value="METHOD_DEF, CTOR_DEF"/>
        </module>

        <!-- Maximum 1 loop per method -->
        <module name="NestedForDepth">
            <property name="max" value="0"/>
        </module>

        <!-- Maximum 10 methods per class -->
        <module name="MethodCount">
            <property name="maxTotal" value="10"/>
            <property name="tokens" value="CLASS_DEF"/>
        </module>
    </module>
</module>
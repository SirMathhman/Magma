<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
	<!-- Forbid use of the 'throw' keyword -->
	<module name="RegexpSingleline">
		<property name="format" value="\bthrow\b" />
		<property name="message" value="Using 'throw' is disallowed; use Result&lt;T,E&gt; instead." />
		<property name="severity" value="error" />
		<property name="fileExtensions" value="java" />
	</module>

	<!-- Forbid use of the 'throws' keyword in method signatures -->
	<module name="RegexpSingleline">
		<property name="format" value="\bthrows\b" />
		<property name="message" value="Using 'throws' is disallowed; return Result&lt;T,E&gt; instead." />
		<property name="severity" value="error" />
		<property name="fileExtensions" value="java" />
	</module>

	<!-- Disallow use of the `null` literal; prefer java.util.Optional -->
	<module name="RegexpSingleline">
		<property name="format" value="\bnull\b" />
		<property name="message" value="Avoid using 'null'; prefer java.util.Optional instead." />
		<property name="severity" value="error" />
		<property name="fileExtensions" value="java" />
	</module>

	<!-- Disallow imports from java.util.regex package -->
	<module name="TreeWalker">
		<module name="IllegalImport">
			<property name="illegalPkgs" value="java.util.regex" />
			<property name="severity" value="error" />
		</module>
	</module>
</module>
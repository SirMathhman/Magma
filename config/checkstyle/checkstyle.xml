<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Ban use of 'throw' and 'throws' tokens project-wide. -->
    <module name="RegexpSingleline">
        <property name="format" value="\b(throw|throws)\b"/>
    <property name="message" value="Use Result instead of exceptions (ban 'throw'/'throws')"/>
        <property name="severity" value="error"/>
    </module>
    <!-- Ban use of the null literal; recommend java.util.Optional instead -->
    <module name="RegexpSingleline">
        <property name="format" value="\bnull\b"/>
        <property name="message" value="Avoid 'null'; use java.util.Optional instead"/>
        <property name="severity" value="error"/>
    </module>
</module>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <property name="severity" value="error"/>

  <module name="TreeWalker">
    <!-- Disallow literal null usage -->
    <module name="RegexpSinglelineJava">
      <property name="format" value="\bnull\b"/>
      <property name="message" value="Do not use the 'null' literal; prefer java.util.Optional instead."/>
      <property name="ignoreComments" value="true"/>
    </module>
    <!-- Enforce method name length: flag identifiers longer than 30 chars -->
    <module name="RegexpSinglelineJava">
      <property name="format" value="\b([A-Za-z_][A-Za-z0-9_]{30,})\s*\("/>
      <property name="message" value="Method names should be 30 characters or less."/>
      <property name="ignoreComments" value="true"/>
    </module>
  </module>
</module>

<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
	<!-- Ban use of 'throw' and 'throws' tokens project-wide. -->
	<module name="RegexpSingleline">
		<property name="format" value="\b(throw|throws)\b" />
		<property name="message" value="Use Result instead of exceptions (ban 'throw'/'throws')" />
		<property name="severity" value="error" />
	</module>
	<!-- Ban use of the null literal; recommend java.util.Optional instead -->
	<module name="RegexpSingleline">
		<property name="format" value="\bnull\b" />
		<property name="message" value="Avoid 'null'; use java.util.Optional instead" />
		<property name="severity" value="error" />
	</module>

	<!-- Code-level checks go under TreeWalker -->
	<module name="TreeWalker">
		<!-- Ban imports from java.util.regex package -->
		<module name="IllegalImport">
			<property name="illegalPkgs" value="java.util.regex" />
			<property name="severity" value="error" />
		</module>

		<!-- Limit number of parameters per method to a maximum of 3 -->
		<module name="ParameterNumber">
			<property name="max" value="3" />
			<property name="severity" value="error" />
		</module>
	</module>

	<!-- Ban fully-qualified references to java.util.regex.* (e.g. java.util.regex.Pattern) -->
	<module name="RegexpSingleline">
		<property name="format" value="java\\.util\\.regex\\." />
		<property name="message" value="Avoid using java.util.regex; prefer simple String methods or java.util.Scanner" />
		<property name="severity" value="error" />
	</module>
</module>
<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <!-- Only enforce maximum methods per class -->
  <module name="TreeWalker">
    <module name="MethodCount">
      <property name="maxTotal" value="20" />
      <!-- include constructors in the count? default is true; keep default -->
    </module>
    
    <module name="IllegalToken">
      <property name="tokens" value="LITERAL_NULL"/>
    </module>
  </module>
</module>
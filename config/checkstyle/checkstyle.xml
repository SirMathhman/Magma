<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
	<!-- Ban literal `null` usages. Recommend java.util.Optional instead. -->
	<module name="TreeWalker">
		<!-- AST-level check to catch null literals -->
		<module name="IllegalToken">
			<property name="tokens" value="LITERAL_NULL" />
		</module>

		<!-- Regexp-based check to provide a custom message and ignore comments -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\bnull\b" />
			<property name="message"
				value="Avoid using literal 'null'; prefer java.util.Optional for absent values." />
			<property name="ignoreComments" value="true" />
		</module>

		<!-- Enforce only one loop per method -->
		<module name="DescendantToken">
			<property name="tokens" value="METHOD_DEF,CTOR_DEF" />
			<property name="limitedTokens" value="LITERAL_FOR,LITERAL_WHILE,LITERAL_DO" />
			<property name="maximumNumber" value="1" />
			<property name="maximumMessage"
				value="Method contains more than one loop (for/while/do-while). Only one loop per method is allowed." />
		</module>

		<!-- Ban throw statements -->
		<module name="IllegalToken">
			<property name="tokens" value="LITERAL_THROW" />
		</module>

		<!-- Ban all 'for' loop constructs (traditional indexed for and enhanced-for). Prefer
		     'while' loops or Java Streams (forEach/map) for iteration.
		-->
		<module name="IllegalToken">
			<property name="tokens" value="LITERAL_FOR" />
			<message key="default"
				value="'for' loops are banned; use a 'while' loop or Streams (forEach/map) instead." />
		</module>

		<!-- Ban throws declarations -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="\bthrows\b" />
			<property name="message"
				value="Using 'throws' is banned; use Result or Option types for error handling." />
			<property name="ignoreComments" value="true" />
		</module>
	</module>
</module>
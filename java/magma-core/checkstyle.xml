<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Treat violations as errors for this rule set -->
    <property name="severity" value="error"/>

    <!-- Disallow imports of java.util.regex package -->
    <module name="TreeWalker">
        <module name="IllegalImport">
            <property name="illegalPkgs" value="java.util.regex"/>
            <message key="name" value="Import of java.util.regex is forbidden by project policy."/>
        </module>
        <!-- Also detect any fully-qualified occurrences of java.util.regex in source -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="java\.util\.regex"/>
            <property name="message" value="Usage of java.util.regex is banned; use explicit parsing or the lexer/parser instead."/>
            <property name="ignoreComments" value="true"/>
        </module>
    </module>
</module>

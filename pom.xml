<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>magma</groupId>
	<artifactId>magma</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>Magma</name>
	<description>Basic Maven project scaffold (Java 22)</description>

	<properties>
		<!-- Default target Java version (use JDK 24 preview features). -->
		<java.version>24</java.version>
		<maven.compiler.plugin.version>3.11.0</maven.compiler.plugin.version>
		<junit.jupiter.version>5.10.0</junit.jupiter.version>
	</properties>

	<dependencies>
		<!-- JUnit 5 for tests -->
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter</artifactId>
			<version>${junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- Compiler plugin configured for Java 24 with preview enabled -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<configuration>
					<release>${java.version}</release>
					<compilerArgs>
						<arg>--enable-preview</arg>
					</compilerArgs>
				</configuration>
			</plugin>

			<!-- Surefire for running JUnit 5 tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.1.2</version>
				<configuration>
					<!-- Include JaCoCo agent arg line when present, keep preview flag for JDK 24. -->
					<argLine>${argLine} --enable-preview</argLine>
					<useModulePath>false</useModulePath>
				</configuration>
			</plugin>

			<!-- JaCoCo plugin for code coverage and enforcing thresholds -->
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.13</version>
				<executions>
					<!-- prepare-agent sets ${jacocoArgLine} used by Surefire -->
					<execution>
						<id>prepare-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<!-- generate coverage report after tests -->
					<execution>
						<id>report</id>
						<phase>test</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
					<!-- enforce 100% coverage on verify -->
					<execution>
						<id>check</id>
						<!-- Enforce coverage during the test phase so 'mvn test' fails on low coverage -->
						<phase>test</phase>
						<goals>
							<goal>check</goal>
						</goals>
						<configuration>
							<rules>
								<rule>
									<!-- Only enforce coverage for the magma.interpret package -->
									<element>PACKAGE</element>
									<includes>
										<include>magma/interpret/*</include>
									</includes>
									<limits>
										<limit>
											<counter>INSTRUCTION</counter>
											<value>COVEREDRATIO</value>
											<minimum>1.0</minimum>
										</limit>
										<limit>
											<counter>BRANCH</counter>
											<value>COVEREDRATIO</value>
											<minimum>1.0</minimum>
										</limit>
										<limit>
											<counter>LINE</counter>
											<value>COVEREDRATIO</value>
											<minimum>1.0</minimum>
										</limit>
										<limit>
											<counter>METHOD</counter>
											<value>COVEREDRATIO</value>
											<minimum>1.0</minimum>
										</limit>
										<limit>
											<counter>CLASS</counter>
											<value>COVEREDRATIO</value>
											<minimum>1.0</minimum>
										</limit>
									</limits>
								</rule>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Exec plugin to run the main class: mvn exec:java -Dexec.mainClass=magma.App -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>3.1.0</version>
			</plugin>

			<!-- Checkstyle plugin (uses local checkstyle.xml which contains no rules) -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>3.6.0</version>
				<configuration>
					<!-- Point to the project root checkstyle config which bans 'null' literal -->
					<configLocation>checkstyle.xml</configLocation>
					<!-- Fail the build on violations so 'null' is effectively banned -->
					<failsOnError>true</failsOnError>
					<!-- Also check test sources -->
					<includeTestSourceDirectory>true</includeTestSourceDirectory>
					<consoleOutput>true</consoleOutput>
				</configuration>
				<executions>
					<execution>
						<id>checkstyle-check</id>
						<phase>test</phase>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- PMD plugin for CPD (copy/paste detection) -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>3.24.0</version>
				<configuration>
					<!-- Minimum token count for CPD duplication detection -->
					<minimumTokens>50</minimumTokens>
					<!-- Ignore string/number literals when detecting duplication -->
					<ignoreLiterals>true</ignoreLiterals>
					<!-- Also analyze test sources -->
					<includeTests>true</includeTests>
					<!-- Do not fail the build by default on CPD findings -->
					<failOnViolation>true</failOnViolation>
				</configuration>
				<executions>
					<execution>
						<id>cpd-check</id>
						<phase>verify</phase>
						<goals>
							<goal>cpd-check</goal>
						</goals>
					</execution>
					<execution>
						<id>cpd-check-test</id>
						<phase>test</phase>
						<goals>
							<goal>cpd-check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<!-- No profiles: Java 24 is the project default with preview enabled. Ensure your JAVA_HOME
		 and PATH point to a JDK 24 installation before building. -->

</project>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>magma-hello</artifactId>
    <version>0.1.0</version>
    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.jupiter.version>5.10.0</junit.jupiter.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.jupiter.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <!-- Checkstyle plugin to enforce tabs-over-spaces -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>3.2.2</version>
                <executions>
                    <execution>
                        <id>validate-checkstyle</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <configLocation>config/checkstyle/checkstyle.xml</configLocation>
                    <consoleOutput>true</consoleOutput>
                    <failOnViolation>true</failOnViolation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
            </plugin>
            <!-- PMD CPD (Copy/Paste Detector) configuration -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.23.0</version>
                <executions>
                    <execution>
                        <id>cpd-check</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>cpd-check</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- Set token length threshold for CPD to 40 -->
                    <minimumTokens>40</minimumTokens>
                    <failOnViolation>true</failOnViolation>
                </configuration>
            </plugin>
            <!-- Transform CPD XML to a readable text report and print it, then fail if duplications exist -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>print-cpd-readable</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <condition property="cpd.exists">
                                    <available file="${project.build.directory}/cpd.xml" />
                                </condition>
                                <echo message="Checking for CPD report..." />
                                <fail message="CPD report not found" unless="cpd.exists" />
                                <mkdir dir="${project.build.directory}" />
                                <!-- transform cpd.xml -> cpd.txt using XSLT -->
                                <xslt in="${project.build.directory}/cpd.xml"
                                      out="${project.build.directory}/cpd.txt"
                                      style="${basedir}/config/cpd/cpd-to-text.xslt" />
                                <echo message="--- CPD Report (readable) ---" />
                                <loadfile property="cpd.content" srcFile="${project.build.directory}/cpd.txt" />
                                <echo message="${cpd.content}" />
                                <!-- if cpd.xml contains <duplication> elements then fail the build -->
                                <xmlproperty file="${project.build.directory}/cpd.xml" prefix="cpd" collapseAttributes="true" />
                                <condition property="cpd.has.duplications">
                                    <isset property="cpd.duplication._0.tokens" />
                                </condition>
                                <fail message="CPD duplication(s) found; failing build" if="cpd.has.duplications" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
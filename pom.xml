<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>magma</groupId>
	<artifactId>magma</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>Magma</name>
	<description>Basic Maven project scaffold (Java 22)</description>

	<properties>
		<!-- Default target Java version set to 24 as requested. -->
		<java.version>24</java.version>
		<maven.compiler.plugin.version>3.11.0</maven.compiler.plugin.version>
		<junit.jupiter.version>5.10.0</junit.jupiter.version>
	</properties>

	<dependencies>
		<!-- JUnit 5 for tests -->
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter</artifactId>
			<version>${junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- Compiler plugin configured for Java 24 with preview enabled -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<configuration>
					<release>${java.version}</release>
					<compilerArgs>
						<arg>--enable-preview</arg>
					</compilerArgs>
				</configuration>
			</plugin>

			<!-- Surefire for running JUnit 5 tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.1.2</version>
				<configuration>
					<argLine>--enable-preview</argLine>
					<useModulePath>false</useModulePath>
				</configuration>
			</plugin>

			<!-- Exec plugin to run the main class: mvn exec:java -Dexec.mainClass=magma.App -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>3.1.0</version>
			</plugin>
		</plugins>
	</build>

	<!-- No profiles: Java 24 is the project default with preview enabled. Ensure your JAVA_HOME
		 and PATH point to a JDK 24 installation before building. -->

</project>
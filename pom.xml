<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.example</groupId>
	<artifactId>magma</artifactId>
	<version>0.1.0-SNAPSHOT</version>

	<properties>
		<maven.compiler.release>22</maven.compiler.release>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<junit.jupiter.version>5.9.3</junit.jupiter.version>
		<!-- Allow skipping CPD checks via -Dcpd.skip=true -->
		<cpd.skip>false</cpd.skip>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-api</artifactId>
			<version>${junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<version>${junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.10.1</version>
				<configuration>
					<release>22</release>
					<fork>true</fork>
				</configuration>
			</plugin>
			<!-- Run the Java-file-count check script during validate; non-zero exit fails the build -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>check-java-file-count</id>
						<phase>validate</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<!-- Use python in PATH; CI should provide it. The script returns non-zero on
							violations -->
							<executable>python</executable>
							<arguments>
								<argument>${project.basedir}/scripts/check_java_files.py</argument>
								<!-- Fail build if the script exits non-zero (default behavior of exec plugin) -->
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>3.24.0</version>
				<configuration>
					<!-- Ensure PMD uses the same Java target as the compiler so it can parse
					     modern language features (records, sealed types, pattern matching). -->
					<!-- Use a supported PMD target that can parse records and sealed types. -->
					<targetJdk>22</targetJdk>
					<minimumTokens>30</minimumTokens>
					<rulesets>
						<ruleset>config/pmd/ruleset.xml</ruleset>
					</rulesets>
				</configuration>
				<!-- Use PMD 7.x (supports Java 22) by adding explicit plugin dependencies -->
				<dependencies>
					<dependency>
						<groupId>net.sourceforge.pmd</groupId>
						<artifactId>pmd-core</artifactId>
						<version>7.0.0</version>
					</dependency>
					<dependency>
						<groupId>net.sourceforge.pmd</groupId>
						<artifactId>pmd-java</artifactId>
						<version>7.0.0</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>pmd-check</id>
						<phase>test</phase>
						<goals>
							<goal>check</goal>
							<goal>cpd-check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0-M7</version>
				<configuration>
					<!-- Also include test classes with additional suffixes like CompileTest1/2 -->
					<includes>
						<include>**/*Test*.java</include>
					</includes>
					<useModulePath>false</useModulePath>
					<forkCount>1</forkCount>
					<reuseForks>true</reuseForks>
					<argLine>--enable-preview</argLine>
					<!-- JUnit Platform parallel execution settings -->
					<configurationParameters>
						junit.jupiter.execution.parallel.enabled=true
						junit.jupiter.execution.parallel.mode.default=concurrent
						junit.jupiter.execution.parallel.mode.classes.default=concurrent
						junit.jupiter.execution.parallel.config.strategy=fixed
						junit.jupiter.execution.parallel.config.fixed.parallelism=16
					</configurationParameters>
				</configuration>
			</plugin>
			<!-- Checkstyle plugin: uses config/checkstyle/checkstyle.xml -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>3.2.2</version>
				<!-- Use a recent Checkstyle core that understands newer Java syntax -->
				<dependencies>
					<dependency>
						<groupId>com.puppycrawl.tools</groupId>
						<artifactId>checkstyle</artifactId>
						<version>10.12.0</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>generate-checkstyle-report</id>
						<!-- Run during verify to avoid failing 'mvn test' runs; use the report-generating goal -->
						<phase>test</phase>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<configLocation>config/checkstyle/checkstyle.xml</configLocation>
					<encoding>${project.build.sourceEncoding}</encoding>
					<!-- Also run Checkstyle on test sources -->
					<includeTestSourceDirectory>true</includeTestSourceDirectory>
					<consoleOutput>true</consoleOutput>
					<!-- Do not fail the build automatically on first run; enable later when configured -->
					<failOnViolation>true</failOnViolation>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>